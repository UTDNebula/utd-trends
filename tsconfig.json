{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      // remap rsg-components/anything to its version in react-styleguidist
      "rsg-components/*": [
        "./node_modules/react-styleguidist/lib/client/rsg-components/*"
      ],
      "@/*": ["*"]
    },
    "baseUrl": "src",
    "verbatimModuleSyntax": true
  },
  "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "/**/**/*/.tsx"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "src/scripts/generateAutocompleteGraph.ts": "cjs",
      "src/scripts/generateCombosTable.ts": "cjs"
    }
  }
}
